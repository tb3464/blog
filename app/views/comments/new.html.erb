<%= form_for([@article, @article.comments.new], :html => {:style => 'display: none;'}) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
	  <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
	  <%= f.submit + " or " + link_to("Cancel", '#', :onclick => "$('#new_comment').slideUp('slow'); $('#new_comment_link').show()") %>
  </div>
<% end %>
